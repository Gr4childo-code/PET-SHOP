<div class='auth'>
	<div class='row'>
		<div class='col s12'>
			<ul class='tabs tabs_auth'>
				<li class='tab col s6'><a class='active' href='#login'>Sign in</a></li>
				<li class='tab col s6'><a href='#register'>Sign up</a></li>
			</ul>
		</div>

		{{! LOGIN }}
		<div id='login' class='col s6 offset-s3'>
			{{#if isLoginError}}
				<p class='alert'>{{isLoginError}}</p>
			{{/if}}
			<div class='row'>
				<form action='/auth/login' method='post' class='col s12'>
					<div class='row'>
						<div class='input-field col s12'>
							<input id='login_email' type='email' name='email' class='validate' />
							<label for='login_email'>Email</label>
							<span class='helper-text' data-error='Type email'>Helper text</span>
						</div>
					</div>
					<div class='row'>
						<div class='input-field col s12'>
							<input id='login_password' type='password' name='password' class='validate' />
							<label for='login_password'>Password</label>
							<span class='helper-text' data-error='Type password'>Helper text</span>

						</div>
					</div>

					<button type='submit' class='btn btn-primary'>Sign in</button>
					<input type='hidden' name='_csrf' value='{{@root.csrf}}' />

				</form>
			</div>
		</div>

		{{! REGISTER }}
		<div id='register' class='col s6 offset-s3'>
			{{#if isEmailError}}
				<p class='alert'>{{isEmailError}}</p>
			{{/if}}
			<div class='row'>
				<form action='/auth/register' method='post' class='col s12'>
					<div class='row'>
						<div class='input-field col s12'>
							<input id='register_name' type='text' name='username' class='validate' />
							<label for='register_name'>Username</label>
							<span class='helper-text' data-error='Type Username'>Helper text</span>
						</div>
					</div>
					<div class='row'>
						<div class='input-field col s12'>
							<input id='register_email' type='email' name='email' class='validate' />
							<label for='register_email'>Email</label>
							<span class='helper-text' data-error='Type email'>Helper text</span>
						</div>
					</div>

					<div class='row'>
						<div class='input-field col s12'>
							<input id='register_password' type='password' name='password' class='validate' />
							<label for='register_password'>Password</label>
						</div>
					</div>
					<div class='row'>
						<div class='input-field col s12'>
							<input id='register_rpassword' type='password' name='rpassword' class='validate' />
							<label for='register_rpassword'>Repeat password</label>
						</div>
					</div>
					<button type='submit' class='btn btn-primary'>Sign up</button>
					<input type='hidden' name='_csrf' value='{{@root.csrf}}' />

				</form>
			</div>
		</div>
	</div>
</div>